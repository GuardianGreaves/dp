<Page x:Class="diplom_loskutova.Page.RoleUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:diplom_loskutova.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RoleUser">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Style="{StaticResource ButtomMenu}" Height="30" Grid.Row="0" HorizontalAlignment="Left">
            <TextBlock FontSize="15" Text="Роль "/>
        </Button>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Style="{StaticResource ButtomMenu}" Height="30" Grid.Row="0" HorizontalAlignment="Right" x:Name="btnDelete" Click="BtnDelete">
                <TextBlock FontSize="15" Text="Удалить"/>
            </Button>
            <Button Style="{StaticResource ButtomMenu}" Height="30" Grid.Row="0" HorizontalAlignment="Right" x:Name="btnAdd" Click="BtnAdd">
                <TextBlock FontSize="15" Text="Добавить"/>
            </Button>
            <Button Style="{StaticResource ButtomMenu}" Height="30" Grid.Row="0" HorizontalAlignment="Right" x:Name="btnChange" Click="BtnChange">
                <TextBlock FontSize="15" Text="Редактировать"/>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="1" Background="Honeydew" Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <TextBlock Text="Тут будут блоки с кол-во чего то"/>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ListView x:Name="listViewRoleUser" MouseDoubleClick="ListViewStatus_MouseDoubleClick" Grid.Column="0" ItemsSource="{Binding}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding [ID_Статуса]}"/>
                        <GridViewColumn Header="Название" DisplayMemberBinding="{Binding [Название]}"/>
                        <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding [Описание]}"/>
                        <GridViewColumn Header="Права" DisplayMemberBinding="{Binding [Права_Доступа]}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Background="OldLace">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Поиск по названию"/>
                        <TextBox Grid.Row="1" x:Name="TextBoxSearchName" TextChanged="TextBoxSearchName_TextChanged"/>

                        <Button Margin="0 10 0 0" Grid.Row="4" Content="Сбросить фильтр" Click="BtnResetFilter_Click" />
                    </Grid>
                </StackPanel>
                <StackPanel Grid.Row="1" Background="NavajoWhite">
                    <TextBlock Text="Тут будут вские диаграммы"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
