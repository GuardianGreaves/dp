<Page x:Class="diplom_loskutova.Page.Users"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:diplom_loskutova.Page" 
      xmlns:ScottPlot="http://schemas.scottplot.net/2008/xaml/presentation"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Margin="5 0 5 5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Button Style="{StaticResource ButtomMenu}" Height="30" Grid.Row="0" Content="Пользователи"/>

        <!-- Кнопки CRUD + Статистика -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource RoundedBorderStyle}" Background="LightBlue" 
                    HorizontalAlignment="Left" Margin="5">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Всего: " FontSize="14"/>
                    <TextBlock x:Name="tbTotalUsers" FontSize="16" FontWeight="Bold" Margin="5 0 0 0"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource ButtomMenu}" Height="30" x:Name="btnDelete" Click="BtnDelete" Content="Удалить"/>
                <Button Style="{StaticResource ButtomMenu}" Height="30" x:Name="btnAdd" Click="BtnAdd" Content="Добавить"/>
                <Button Style="{StaticResource ButtomMenu}" Height="30" x:Name="btnChange" Click="BtnChange" Content="Редактировать"/>
            </StackPanel>
        </Grid>

        <!-- Основной контент -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ListView x:Name="listViewUsers" Grid.Column="0" MouseDoubleClick="ListViewStatus_MouseDoubleClick"
                      ItemsSource="{Binding}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding [ID_Пользователя]}"/>
                        <GridViewColumn Header="Роль" DisplayMemberBinding="{Binding [НазваниеРоли]}"/>
                        <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding [Имя]}"/>
                        <GridViewColumn Header="Фамилия" DisplayMemberBinding="{Binding [Фамилия]}"/>
                        <GridViewColumn Header="Отчество" DisplayMemberBinding="{Binding [Отчество]}"/>
                        <GridViewColumn Header="Логин" DisplayMemberBinding="{Binding [Логин]}"/>
                        <GridViewColumn Header="Пароль" DisplayMemberBinding="{Binding [Пароль]}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Панель фильтров + График -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Background="Beige" Margin="5">
                    <TextBlock Text="Поиск по роли" Margin="0 5"/>
                    <ComboBox x:Name="ComboBoxSearchRole" SelectionChanged="ComboBoxSearchRole_SelectionChanged"/>
                    <TextBlock Text="Поиск по ФИО" Margin="0 10 0 5"/>
                    <TextBox x:Name="TextBoxSearchFIO" TextChanged="TextBoxSearchFIO_TextChanged"/>
                    <TextBlock Text="Поиск по логину" Margin="0 10 0 5"/>
                    <TextBox x:Name="TextBoxSearchLogin" TextChanged="TextBoxSearchLogin_TextChanged"/>
                    <Button Content="Сбросить фильтр" Click="BtnResetFilter_Click" Margin="0 10"/>
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Распределение пользователей по ролям" 
                              TextAlignment="Center" FontSize="14" Margin="0 10"/>
                    <ScottPlot:WpfPlot x:Name="WpfPlot1" Grid.Row="1"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>