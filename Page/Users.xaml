<Page x:Class="diplom_loskutova.Page.Users"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:diplom_loskutova.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Users">
    <Grid Margin="5 0 5 5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Style="{StaticResource ButtomMenu}" Height="30" Grid.Row="0" HorizontalAlignment="Left">
            <TextBlock FontSize="15" Text="Пользователи "/>
        </Button>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Style="{StaticResource ButtomMenu}" Height="30" Grid.Row="0" HorizontalAlignment="Right" Click="BtnDelete">
                <TextBlock FontSize="15" Text="Удалить"/>
            </Button>
            <Button Style="{StaticResource ButtomMenu}" Height="30" Grid.Row="0" HorizontalAlignment="Right" Click="BtnAdd">
                <TextBlock FontSize="15" Text="Добавить"/>
            </Button>
            <Button Style="{StaticResource ButtomMenu}" Height="30" Grid.Row="0" HorizontalAlignment="Right" Click="BtnChange">
                <TextBlock FontSize="15" Text="Редактировать"/>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="1" Background="AliceBlue" Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <TextBlock Text="Тут будут блоки с кол-во чего то"/>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ListView x:Name="listViewUsers" MouseDoubleClick="ListViewStatus_MouseDoubleClick" Grid.Column="0" ItemsSource="{Binding}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding [ID_Пользователя]}"/>
                        <GridViewColumn Header="Роль" DisplayMemberBinding="{Binding [НазваниеРоли]}"/>
                        <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding [Имя]}"/>
                        <GridViewColumn Header="Фамилия" DisplayMemberBinding="{Binding [Фамилия]}"/>
                        <GridViewColumn Header="Отчество" DisplayMemberBinding="{Binding [Отчество]}"/>
                        <GridViewColumn Header="Логин" DisplayMemberBinding="{Binding [Логин]}"/>
                        <GridViewColumn Header="Пароль" DisplayMemberBinding="{Binding [Пароль]}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Background="Beige">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Поиск по роли"/>
                        <ComboBox Grid.Row="1" x:Name="ComboBoxSearchRole" SelectionChanged="ComboBoxSearchRole_SelectionChanged"/>

                        <TextBlock Grid.Row="2" Text="Поиск по ФИО"/>
                        <TextBox Grid.Row="3" x:Name="TextBoxSearchFIO" TextChanged="TextBoxSearchFIO_TextChanged"/>
                        
                        <TextBlock Grid.Row="4" Text="Поиск по логину"/>
                        <TextBox Grid.Row="5" x:Name="TextBoxSearchLogin" TextChanged="TextBoxSearchLogin_TextChanged"/>
                        
                        <Button Margin="0 10 0 0" Grid.Row="6" Content="Сбросить фильтр" Click="BtnResetFilter_Click" />
                    </Grid>
                </StackPanel>
                <StackPanel Grid.Row="1" Background="NavajoWhite">
                    <TextBlock Text="Тут будут вские диаграммы"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
