<Page x:Class="diplom_loskutova.Page.Status"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:diplom_loskutova.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Status">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Button Style="{StaticResource ButtomMenu}" Height="30" Grid.Row="0" HorizontalAlignment="Left">
            <TextBlock FontSize="15" Text="Статус "/>
        </Button>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Style="{StaticResource ButtomMenu}" Height="30" Grid.Row="0" HorizontalAlignment="Right" x:Name="btnDelete" Click="BtnDelete">
                <TextBlock FontSize="15" Text="Удалить"/>
            </Button>
            <Button Style="{StaticResource ButtomMenu}" Height="30" Grid.Row="0" HorizontalAlignment="Right" x:Name="btnAdd" Click="BtnAdd">
                <TextBlock FontSize="15" Text="Добавить"/>
            </Button>
            <Button Style="{StaticResource ButtomMenu}" Height="30" Grid.Row="0" HorizontalAlignment="Right" x:Name="btnChange" Click="BtnChange">
                <TextBlock FontSize="15" Text="Редактировать"/>
            </Button>
        </StackPanel>

        <Grid Grid.Row="1" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <!-- Всего пользователей -->
            <Border Grid.Column="0" Style="{StaticResource RoundedBorderStyle}" Background="LightBlue">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Всего: " FontSize="14" VerticalAlignment="Center"/>
                    <TextBlock x:Name="tbTotalUsers" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                </StackPanel>
            </Border>

        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>                
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <ListView x:Name="listViewStatus" MouseDoubleClick="ListViewStatus_MouseDoubleClick" Grid.Column="0" ItemsSource="{Binding}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding [ID_Статуса]}"/>
                            <GridViewColumn Header="Название" DisplayMemberBinding="{Binding [Название]}"/>
                            <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding [Описание]}"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
               Text="{Binding CurrentPageDisplay}" 
               HorizontalAlignment="Left"
               VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1" 
               Text="{Binding PageInfo}" 
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>

                    <Button Width="30" Height="30" Grid.Column="2" 
            Content="&lt;" 
            Command="{Binding PreviousCommand}"
            IsEnabled="{Binding CanGoPrevious}"/>
                    <Button Width="30" Height="30" Grid.Column="3" 
            Content="&gt;" 
            Command="{Binding NextCommand}"
            IsEnabled="{Binding CanGoNext}"/>
                </Grid>
            </Grid>
            
            

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Background="Honeydew">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Поиск по названию"/>
                        <TextBox Grid.Row="1" x:Name="TextBoxSearchName" TextChanged="TextBoxSearchName_TextChanged"/>

                        <Button Margin="0 10 0 0" Grid.Row="4" Content="Сбросить фильтр" Click="BtnResetFilter_Click" />
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
