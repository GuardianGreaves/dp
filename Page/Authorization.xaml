<Page x:Class="diplom_loskutova.Page.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      Title="Authorization">

    <Border Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Background="Transparent" HorizontalAlignment="Right" VerticalAlignment="Center" BorderThickness="0" Foreground="Gray"
                    Height="24" Width="24">
                <iconPacks:PackIconMaterial Kind="Close"/>
            </Button>

            <TextBlock Margin="10" Text="Авторизация" Foreground="Pink" Grid.Row="1" 
                       VerticalAlignment="Bottom" HorizontalAlignment="Center"
                       FontSize="40" FontWeight="SemiBold"/>

            <Border Margin="10" Grid.Row="2" Width="340" Height="36" CornerRadius="5" BorderThickness="1" BorderBrush="Gray">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Width="34" Height="34" Background="Transparent" CornerRadius="17" VerticalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="EmailOutline" Width="22" Height="22" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBox FontSize="18" x:Name="TextBoxLogin" VerticalAlignment="Center" Background="Transparent" Grid.Column="1" BorderThickness="0" Width="300" Panel.ZIndex="2"
                             HorizontalAlignment="Left" TextChanged="TextBoxLogin_TextChanged"/>
                    <TextBlock x:Name="TextBlockLogin" Grid.Column="1" Text="Логин" FontSize="18" Foreground="#808080"
                               Padding="2 4 0 0" Width="70" HorizontalAlignment="Left" Panel.ZIndex="1"/>
                </Grid>
            </Border>

            <Border Margin="10" Grid.Row="3" Width="340" Height="36" CornerRadius="5" BorderThickness="1" BorderBrush="Gray">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="93*"/>
                        <ColumnDefinition Width="59*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Width="34" Height="34" Background="Transparent" CornerRadius="17" VerticalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="LockOutline" Width="22" Height="22" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <PasswordBox FontSize="18" VerticalAlignment="Center" x:Name="TextBoxPassword" Background="Transparent" Grid.Column="1" BorderThickness="0" Width="300" Panel.ZIndex="2"
                                 HorizontalAlignment="Left" Grid.ColumnSpan="2" PasswordChanged="TextBoxPassword_PasswordChanged"/>
                    <TextBlock x:Name="TextBlockPassword" Grid.Column="1" Text="Пароль" FontSize="18" Foreground="#808080" Panel.ZIndex="1"
                               Padding="2 4 0 0" Width="70" HorizontalAlignment="Left"/>
                </Grid>
            </Border>

            <Button Width="340" Margin="10" Grid.Row="4" x:Name="SignIn" Content="Войти" Height="38" Background="Pink"
                    FontSize="22" Style="{StaticResource ButtonDefault}" 
                    Click="SignIn_Click"/>

        </Grid>
    </Border>
</Page>
