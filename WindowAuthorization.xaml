<Window x:Class="diplom_loskutova.WindowAuthorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:diplom_loskutova"
        xmlns:iconPacks="clr-namespace:MahApps.Metro.IconPacks;assembly=MahApps.Metro.IconPacks.Material"
        mc:Ignorable="d"
        Width="710" Height="460" WindowStartupLocation="CenterScreen" Background="Transparent" AllowsTransparency="True" WindowStyle="None">
    <Grid>
        

        <DockPanel Grid.Row="1" Background="#f2f2f2">
                <Frame Grid.Row="1" x:Name="mainFrame" NavigationUIVisibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </DockPanel>
        <Button Grid.Row="0" Background="Transparent" HorizontalAlignment="Right" VerticalAlignment="Top" BorderThickness="0" Foreground="Gray"
                    Height="24" Width="24" Click="Button_Click">
            <iconPacks:PackIconMaterial Kind="Close"/>
        </Button>

    </Grid>
</Window>
